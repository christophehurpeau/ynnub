{
  "extends": [
    "pob/babel",
    "pob/typescript",
    "pob/typescript-react"
  ],
  "parser": "typescript-eslint-parser",
  "plugins": [
    "typescript"
  ],
  "settings": {
    "import/core-modules": [
      "classnames",
      "babel-plugin-jsx-code/Component"
    ]
  },
  "rules": {
    "jsx-a11y/label-has-for": "off"
  },
  "overrides": [
    {
      "files": [
        "src/**/*.test.{ts,tsx}",
        "src/__tests__/**/*.{ts,tsx}"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
